
<p id="notice"><%= notice %></p>

<div class="table">
  <h1>Wines</h1>
  
  <table>
    <thead class="table-light">
      <tr>
        <th>Name</th>
        <th>Cepas con pluck en el modelo</th>
        <th>Cepas con modelo intermedio</th>
        <th>Percentage</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @wines.each do |wine| %>
        <tr>
          <td><%= wine.name %></td>
          <td class="text-success"><%= wine.name_cepa.join(' & ') %></td>
          <td>
            <ul>
              <%wine.assemblies.each do |assem| %>
              <li><%= assem.strain%></li>
              <% end %>
            </ul>
          </td>  
          <td>
            <ul>
              <%wine.assemblies.each do |assembly| %>
              <li style="list-style: none;"><%= assembly.percentage %> %</li>
              
            <%end %>
            </ul>
            
          </td>
          <td><%= link_to 'Show', wine %></td>
          <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
          <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Wine', new_wine_path %>
  
</div>
