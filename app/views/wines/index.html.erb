
<p id="notice"><%= notice %></p>

<h1>Wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Cepas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td>
          <ul>
            <%wine.assemblies.each do |assem| %>
            <li><%= assem.strain.name %></li>
            <% end %>
          </ul>
        </td>  
        <!-- <td>
          <ul>
            <%wine.assemblies.each do |assembly| %>
            <li><%= assembly.percentage %></li>
          <%end %>
          </ul>
        </td> -->
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

